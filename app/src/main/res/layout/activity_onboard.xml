<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud"
    tools:context=".View.OnboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_290sdp"
            android:src="@drawable/lavage_img"
            android:scaleType="fitXY"
            android:id="@+id/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartPressing"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/jaune"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_bienve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue\n sur notre application"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/primary"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slogan"
        android:layout_gravity="center"
        android:text="Découvrez la nouvelle façon de faire les pressings sans vous déplacer"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commencer"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:id="@+id/btn_commencer"
        android:fontFamily="@font/poppins_semibold"
        app:cornerRadius="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_account"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        />


</LinearLayout>