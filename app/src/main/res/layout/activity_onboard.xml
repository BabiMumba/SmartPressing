<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud"
    tools:context=".View.OnboardActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:src="@drawable/machine"
        android:scaleType="fitXY"
        android:id="@+id/logo"/>
    <TextView
        android:id="@+id/txt_bienve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue\n sur notre application"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/primary"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slogan"
        android:text="Découvrez la nouvelle façon de faire les pressings sans vous déplacer"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commencer"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:id="@+id/btn_commencer"
        android:fontFamily="@font/poppins_semibold"
        app:cornerRadius="@dimen/_7sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_account"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_10sdp"
        />


</LinearLayout>