<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".Fragment.SettingFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/baseline_person_24"
            android:id="@+id/profile_image"
            app:civ_border_color="@color/primary"
            app:civ_border_width="@dimen/_1sdp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Babimumba"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/primary_text"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/name_txt"
                android:layout_marginStart="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mail"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/mail_txt"
                android:layout_marginStart="@dimen/_5sdp"
                />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/location_lyt"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_pin_24"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma localisation"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/location_txt"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stock_dat"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma commande"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_settings_24"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuration"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/logout_lyt"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_logout_24"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deconnexion"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            />

    </LinearLayout>

</LinearLayout>