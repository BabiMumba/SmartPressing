<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/pantalon"
        android:id="@+id/image_hab"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/image_hab"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pantalon"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/nom_hab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10$/pc"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/prix_hab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10$"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/prix_total"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_toEndOf="@id/image_hab"
        >
        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="-"
            android:backgroundTint="@color/rouge"
            android:textSize="@dimen/_15ssp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/moins"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            />
        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="0"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/quantite"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/poppins_bold"
            />
        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="+"
            android:backgroundTint="@color/bleu"
            android:textSize="@dimen/_15ssp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/plus"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            />


    </LinearLayout>

</RelativeLayout>